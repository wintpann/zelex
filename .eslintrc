{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "no-plusplus": "off",
        "class-methods-use-this": "off",
        "no-bitwise": "off"
    }
}
